<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body>
  <%- include('../partials/navbar') %>
  <section class="container">
    <form action="/products/myProducts" method="get">
      <input type="text" name="search" placeholder="Nama product">
      <input type="submit" value="Search">
    </form>
    <a href="/products/add">Add Product</a>
    <table border="1">
      <tr>
        <th>No</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Store</th>
        <th>Action</th>
      </tr>
      <% products.forEach(e => { %>
      <tr>
        <td><%= e.id %></td>
        <td><%= e.name %></td>
        <td><%= e.description %></td>
        <td><%= e.rupiah %></td>
        <td><%= e.User.username %></td>
        <td>
          <a href="/products/myProducts/<%= e.id %>">Edit</a>
          <a href="/products/myProducts/delete/<%= e.id %>">Delete</a>
        </td>
      </tr>
      <% }) %>
    </table>
  </section>

  <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body>
  <%- include('../partials/navbar') %>
  <section class="container">
    
    <%= JSON.stringify(userprofile)%>
    <h1>Edit Profile</h1>

    <form action="/users/profile/edit/<%= isLoggedIn %>" method="post" style="border:1px solid #ccc">
        <div class="container">
            <br>
            <label for="firstname"><b>First Name</b></label><br>
            <input type="text" placeholder="Enter First Name" name="firstname" value="<%= userprofile.firstName %>" required><br><br>
            
            <label for="lastname"><b>Last Name</b></label><br>
            <input type="text" placeholder="Enter Last Name" name="lastname" value="<%= userprofile.lastName %>" required><br><br>

            <label for="address"><b>Address</b></label><br>
            <input type="text" placeholder="Enter Address" name="address" value="<%= userprofile.address %>" required><br><br>
            
            <button type="submit" >submit</button><br><br>
            </div>
        </div>
    </form>

    <h1>Edit Credentials</h1>

    <form action="/users/profile/editcredentials/<%= isLoggedIn %>" method="post" style="border:1px solid #ccc">
        <div class="container">
            <br>
            <label for="username"><b>Username</b></label><br>
            <input type="text" placeholder="Enter Username" name="username" value="<%= userprofile.User.username %>" required><br><br>
            
            <label for="email"><b>E-Mail</b></label><br>
            <input type="text" placeholder="Enter Last Name" name="email" value="<%= userprofile.User.email %>" required><br><br>

            <!-- <label for="oldpassword"><b>Enter Old Password</b></label><br>
            <input type="password" placeholder="Enter Password" name="oldpassword" required><br><br> -->

            <label for="password"><b>New Password</b></label><br>
            <input type="password" placeholder="Enter Password" name="password" required><br><br>
            
            <button type="submit" >submit</button><br><br>
            </div>
        </div>
    </form>
 </body>
</html>